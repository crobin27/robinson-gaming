---
import PortfolioCard from "../components/UpdatedPortfolioCard.astro";
---

<main class="max-w-5xl w-full mx-auto px-4 sm:px-6 lg:px-8 pt-28">
    <section class="text-center">
        <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2">
            Robinson Gaming
        </h1>
        <p class="text-base sm:text-lg mb-4 pt-4 shadow-lg">
            <!-- short professional description  -->
            As an independent developer, I focus on creating engaging and challenging
            mobile puzzle games, continually enhancing my game development skills
            and Unity Game Engine proficiency.
        </p>
        <a
            id="games"
            href="/about"
            class="hover:opacity-80"
            aria-label="Learn more about Robinson Gaming"
        >
            <img
                src="/images/about_button.png"
                alt="Learn more about us"
                class="w-24 md:w-32 mx-auto"
            />
        </a>
        <h2 class="text-xl md:text-3xl font-bold mt-8 mb-4">Games</h2>
    </section>
    <div class="container mx-auto p-4">
        <!-- Portfolio Cards -->
        <PortfolioCard
            desktopImageSrc="/images/wmt_desktop.png"
            mobileImageSrc="/images/wmt_mobile.png"
            googlePlayLink="https://play.google.com/store/apps/details?id=com.robinson.wordmatchtiles"
            appStoreLink="https://apps.apple.com/us/app/word-match-tiles/id6477621209"
        />
        <PortfolioCard
            desktopImageSrc="/images/js_desktop.png"
            mobileImageSrc="/images/js_mobile.png"
        />
        <PortfolioCard
            desktopImageSrc="/images/nct_desktop.png"
            mobileImageSrc="/images/nct_mobile.png"
            googlePlayLink="https://play.google.com/store/apps/details?id=com.robinson.nc2048"
            appStoreLink="https://apps.apple.com/us/app/number-crunch-tiles/id6462944098"
        />
    </div>
</main>
