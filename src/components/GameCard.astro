---
// GameCard.astro - Component for displaying a game card with download links
// Props: title, androidUrl, iosUrl, imageUrl, altText
const { title, androidUrl, iosUrl, imageUrl, altText } = Astro.props;
---

<article class="relative">
	<img src={imageUrl} alt={altText} class="w-full h-auto" />
	<div class="absolute bottom-0 left-0 pl-8 pb-4 space-y-3">
		<a
			href={androidUrl}
			target="_blank"
			class="block"
			aria-label={`Download ${title} for Android`}
		>
			<img
				src="/images/footer/download_on_gp.png"
				alt="Download on Google Play"
				class="h-6 sm:h-8 md:h-12 lg:h-16 hover:opacity-90 transition-all duration-300"
			/>
		</a>
		<a
			href={iosUrl}
			target="_blank"
			class="block"
			aria-label={`Download ${title} for iOS`}
		>
			<img
				src="/images/footer/download_on_as.png"
				alt="Download on Apple App Store"
				class="h-6 sm:h-8 md:h-12 lg:h-16 hover:opacity-90 transition-all duration-300"
			/>
		</a>
	</div>
</article>
