---
const baseUrl = "/";
---

<header
    class="bg-cover bg-center p-5 text-white flex justify-between items-center fixed top-0 left-0 w-full z-50 rounded-bl-2xl rounded-br-2xl"
    style="background-image: url('/images/header/header_image.png'); background-position: center; background-size: 100% 100%;"
>
    <a href={baseUrl} class="block sm:hidden">
        <img
            src="/images/header/Logo_With_Brand.png"
            alt="Robinson Gaming Combined Logo"
            class="w-16 h-16 sm:w-20 sm:h-20"
        />
    </a>
    <a href={baseUrl} class="hidden sm:flex items-center">
        <img
            src="/images/header/Logo_By_Itself.png"
            alt="Company Logo"
            class="w-8 h-8 sm:w-10 sm:h-10 mr-2"
        />
        <span class="font-bold text-xl">Robinson Gaming</span>
    </a>

    <!-- Hamburger Icon -->
    <div id="hamburger" class="block sm:hidden cursor-pointer">
        <img src="/images/header/hamburger.png" alt="Menu" class="w-8 h-8" />
    </div>

    <!-- Navigation Menu -->
    <nav id="navMenu" class="hidden sm:flex">
        <ul
            class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-6"
        >
            <li>
                <a
                    href={`${baseUrl}about`}
                    class="hover:text-gray-300 font-bold text-sm sm:text-base"
                    >About</a
                >
            </li>
            <li>
                <a
                    href={`${baseUrl}contact`}
                    class="hover:text-gray-300 font-bold text-sm sm:text-base"
                    >Contact</a
                >
            </li>
            <li>
                <a
                    href="/#games"
                    class="hover:text-gray-300 font-bold text-sm sm:text-base"
                    >Games</a
                >
            </li>
        </ul>
    </nav>
    <!-- Overlay Menu -->
    <div
        id="overlayMenu"
        class="fixed inset-0 bg-black bg-opacity-94 flex justify-center items-center opacity-0 pointer-events-none transition-opacity duration-300"
    >
        <div class="absolute top-4 right-4">
            <button id="closeMenu" class="text-white text-2xl font-bold"
                >X</button
            >
        </div>
        <div class="text-center mt-8 sm:mt-0">
            <ul class="space-y-4">
                <li>
                    <a href={`${baseUrl}`} class="text-white text-xl">Home</a>
                </li>
                <li>
                    <a href={`${baseUrl}about`} class="text-white text-xl"
                        >About</a
                    >
                </li>
                <li>
                    <a href={`${baseUrl}contact`} class="text-white text-xl"
                        >Contact</a
                    >
                </li>
                <li><a href="/#games" class="text-white text-xl">Games</a></li>
            </ul>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const hamburger = document.getElementById("hamburger");
            const overlayMenu = document.getElementById("overlayMenu");
            const closeMenu = document.getElementById("closeMenu");

            hamburger.addEventListener("click", function () {
                overlayMenu.classList.remove(
                    "opacity-0",
                    "pointer-events-none",
                );
                overlayMenu.classList.add("opacity-100", "pointer-events-auto");
            });

            closeMenu.addEventListener("click", function () {
                overlayMenu.classList.remove(
                    "opacity-100",
                    "pointer-events-auto",
                );
                overlayMenu.classList.add("opacity-0", "pointer-events-none");
            });
        });
    </script>
</header>
