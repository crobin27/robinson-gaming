---
// Import Navbar and Footer
import "/src/styles/global.css";
import "../styles/layout.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

// Accept title, description, and optional social image as props
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Page Title and Description -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/images/favicon.png" type="image/png" />

    <!-- Canonical URL -->
    <link
      rel="canonical"
      href={`https://www.robinsongaming.com${Astro.url.pathname}`}
    />

    <!-- Open Graph Tags for Social Media Sharing -->
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content={`https://www.robinsongaming.com${Astro.url.pathname}`}
    />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content={`https://www.robinsongaming.com/images/social-share-default.png`}
    />

    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:url"
      content={`https://www.robinsongaming.com${Astro.url.pathname}`}
    />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content={`https://www.robinsongaming.com/images/social-share-default.png`}
    />

    <!-- Global Styles -->
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <div class="wrapper">
      <Navbar />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
