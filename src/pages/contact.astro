---
// Contaact.astro - Page
import MetaTags from "../components/MetaTags.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const meta = {
    title: "Contact",
    description: "Contact us for all inquiries, concerns, or suggestions.",
};
---

<!doctype html>
<html lang="en">
    <head>
        <MetaTags title={meta.title} description={meta.description} />
        <link href="/styles/global.css" rel="stylesheet" />
    </head><body class="text-white bg-gray-800">
        <Header />
        <main class="w-3/5 mx-auto text-center mt-24">
            <h1 class="font-bold text-3xl">Contact</h1>
            <p class="mt-4 w-3/5 text-xl mx-auto text-center">
                For all inquiries, concerns, or suggestions, please contact us
                at <a
                    href="mailto:robinson.games.help@gmail.com"
                    class="underline">robinson.games.help@gmail.com</a
                >
            </p>
            <img
                src="/images/contact-supporting-image.png"
                alt="Contact Supporting Image"
                class="my-8 mx-auto w-3/5"
            />
        </main>
        <Footer />
    </body>
</html>
